{
  "name": "inx-service-ca",
  "version": "1.0.0",
  "description": "This service contains the backend logic for insightsX project, implemented with hexagonal code architecture",
  "author": {
    "name": "Sayyam"
  },
  "main": "dist/server.ts",
  "license": "MIT",
  "keywords": [],
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "tsx --env-file=.env.local --watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env.local dist/server.js",
    "start:local": "node --env-file=.env.local dist/server.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "lint:fix": "eslint . --fix",
    "cleanup": "rm -r dist",
    "prepare": "if [ \"$NODE_ENV\" == \"dev-local\" ]; then husky; fi",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "mongodb": "^6.13.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
