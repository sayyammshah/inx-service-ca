{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      // Core Module Alias
      "@core/business": ["core/business/index.js"],
      "@core/storage-interface": ["core/interfaces/storage/index.js"],
      "@bindings/logger-interface": ["core/interfaces/logger/index.js"],
      "@core/app": ["core/applications/index.js"],
      "@core/common/*": ["core/common/*"],

      // Bindings Module Alias
      "@bindings/mongo-database": ["bindings/database/mongodb/index.js"],
      "@bindings/logger": ["bindings/logger/index.js"],
      "@bindings/express-routes": ["bindings/routes/express/index.js"],
      "@bindings/controllers": ["bindings/controllers/index.js"],
      "@bindings/middleware": ["bindings/middleware/index.js"],
      "@bindings/common/*": ["bindings/common/*"],

      // Infrastructure Module Alias
      "@infra/clients": ["infrastructure/clients/index.js"],
      "@infra/common/*": ["infrastructure/common/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
