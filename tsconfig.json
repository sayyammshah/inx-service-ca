{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@core/shared": ["core/shared/index.ts"],
      "@core/interface": ["core/interfaces/index.ts"],
      "@core/apps": ["core/applications/index.ts"],

      "@adapters/express-routers": ["adapters/routes/express/index.ts"],

      "@infrastructure/clients": ["infrastructure/clients/index.ts"],

      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
