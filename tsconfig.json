{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      // Core Module Alias
      "@core/business": ["core/business/index.js"],
      "@core/database-interface": ["core/interfaces/database/index.js"],

      // Bindings Module Alias
      "@bindings/express-routes": ["core/bindings/routes/index.js"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
